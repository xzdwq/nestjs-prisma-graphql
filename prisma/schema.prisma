generator client {
  provider =   "prisma-client-js"
}

datasource db {
  provider =   "postgresql"
  url      =   env("DB_PG_REVOLUTERRA_URL")
}

model categories {
  id           Int @id @default(autoincrement())
  name         String
  slug         String
  products     products[]
}

model products {
  id           Int @id @default(autoincrement())
  category     categories @relation(fields: [category_id], references: [id])
  category_id  Int
  name         String
  slug         String
  price        Int
}